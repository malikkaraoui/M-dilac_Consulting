{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "api/contact",
                "function": {
                    "functionId": "contact",
                    "region": "europe-west1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "functions": {
        "source": "functions"
    },
    "database": {
        "rules": "database.rules.json"
    }
}